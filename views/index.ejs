<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.0/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <style>
        input[name="tasks"]:checked + span {
            color: hsl(348, 100%, 61%);
        }
    </style>
</head>
<body>
    <section class="section">
        <div class="container">
            <h2 class="title is-3">Add Tasks</h2>
            <form method="POST" action="/task/add">
                <div class="field has-addons">
                    <div class="control">
                        <input class="input" type="text" name="task" placeholder="Add Task">
                    </div>
                    <div class="control">
                        <button class="button is-info">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <section class="section is-paddingless">
        <div class="container">
            <h1 class="title is-2"><%= title %></h1>
              
            <form method="POST" action="/task/delete">

                <div class="list is-hoverable">
                    <% tasks.forEach((task, i) => { %>
                    <div class="list-item">
                        <label for="task-item-<%= i %>">
                            <input type="checkbox" id="task-item-<%= i %>" name="tasks" value="<%= task %>"> 
                            <span><%= task %></span>
                        </label>
                    </div>
                    <% }) %>
                </div>
                <div class="field is-grouped">
                    <div class="control">
                        <button class="button is-link" type="submit">Remove</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <section class="section">
        <div class="container">
            <div class="card">
                <header class="card-header">
                    <p class="card-header-title">Next Business Call</p>
                </header>
                <div class="card-content">
                    <div class="content">
                        <p><%= call.name %></p>
                        <p><%= call.company %></p>
                        <p><%= call.phone %></p>
                        <p><%= call.time %></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="section is-paddingless">
        <div class="container">
            <h2 class="title is-3">Edit Next Call</h2>
            <form method="POST" action="/call/add">
                <div class="field">
                    <label class="label">Contact Name</label>
                    <div class="control has-icons-left has-icons-right">
                        <input class="input" type="text" name="name" placeholder="Contact Name">
                        <span class="icon is-small is-left">
                        <i class="fas fa-user"></i>
                        </span>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Email</label>
                    <div class="control has-icons-left has-icons-right">
                        <input class="input" type="email" name="company" placeholder="Email input">
                        <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                        </span>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Phone</label>
                    <div class="control has-icons-left has-icons-right">
                        <input class="input" type="phone" name="phone" placeholder="Phone input">
                        <span class="icon is-small is-left">
                        <i class="fas fa-phone"></i>
                        </span>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Day & Time</label>
                    <div class="control has-icons-left has-icons-right">
                        <input class="input" type="phone" name="time" placeholder="Time">
                        <span class="icon is-small is-left">
                        <i class="fas fa-calendar"></i>
                        </span>
                    </div>
                </div>
                <div class="field is-grouped">
                    <div class="control">
                        <button class="button is-link">Submit</button>
                    </div>
                </div>
                <br>
            </form>
        </div>
    </section>
</body>
</html>
